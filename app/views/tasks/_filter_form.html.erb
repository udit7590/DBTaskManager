<%= form_for(:task, url: tasks_path, method: :get) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, value: params.dig('task', 'text') %>

    <%= form.label :status %>
    <%= form.select :status, options_for_select([["Select Status", ""]] + status_options, selected: params.dig('task', 'status')) %>

    <%= form.label :created_at_start %>
    <%= form.text_field :created_at_start, class: 'db-datepicker', value: params.dig('task', 'created_at_start') %>
    <%= form.label :created_at_end %>
    <%= form.text_field :created_at_end, class: 'db-datepicker', value: params.dig('task', 'created_at_end') %>

    <%= form.submit 'Search' %>
  </div>

<% end %>
